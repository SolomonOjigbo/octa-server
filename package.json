{
  "name": "octa-server",
  "version": "0.0.1",
  "description": "Octa Multi-Tenant API Server",
  "main": "dist/shared/infra/http/index.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "build": "rimraf ./dist && tsc",
    "start": "node dist/shared/infra/http/index.ts",
    "start:dev": "nodemon --watch src --ext ts --exec ts-node src/shared/infra/http/index.ts",
    "dev": "npm run start:dev",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "testWithCoverage": "jest --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SolomonOjigbo/octa-server.git"
  },
  "keywords": [
    "POS",
    "Inventory",
    "Multi-Tenant",
    "Pharmacy",
    "B2B"
  ],
  "author": "Solomon Ojigbo",
  "dependencies": {
    "@prisma/client": "^4.14.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dompurify": "^3.0.2",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsdom": "^21.1.1",
    "jsonwebtoken": "^9.0.0",
    "libphonenumber-js": "^1.10.30",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.10.0",
    "rand-token": "^1.0.1",
    "redis": "^4.6.6",
    "uuidv4": "^6.2.13",
    "validator": "^13.9.0",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.2",
    "@types/jest": "^29.5.2",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.16.0",
    "@types/validator": "^13.7.15",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.39.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "prisma": "^4.14.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  }
}
